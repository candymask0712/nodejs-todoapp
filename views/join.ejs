<!doctype html>
<html>
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
    <link rel="stylesheet" href="/public/join.css">

    <title>Hello, world!</title>
  </head>
  <body>

    <%- include('nav.html') %>
    
    <div class="container mt-4">
      <form action="/register" method="POST">
        <div class="form-group">
          <label>ID</label>
          <input type="text" class="form-control" name="id" id="id">
          <div class="success-message hide">사용할 수 있는 아이디입니다</div>
          <div class="failure-message hide">아이디는 네 글자 이상이여야 합니다</div>
        </div>
        <div class="form-group">
          <label>PASSWORD</label>
          <input type="text" class="form-control" name="pw" id="pw">
        </div>
        <div class="form-group">
          <label>PASSWORD-check</label>
          <input type="text" class="form-control" name="pw-retype" id="pw-retype">
          <div class="mismatch-message hide">비밀번호의 값이 일치하지 않습니다</div>
        </div>
        <button type="submit" class="btn btn-outline-secondary">JOIN</button>
      </form>
    </div>
    <script>
      let elInputUsername = document.querySelector('#id')
      let elFailureMessage = document.querySelector('.failure-message')
      let elSuccessMessage = document.querySelector('.success-message')
      const elInputPassword = document.querySelector('#pw')
      const elInputPasswordRetype = document.querySelector('#pw-retype')
      const elPasswordSuccessMessage = document.querySelector('.mismatch-message')

      elInputUsername.onkeyup = isMoreThan4Length;

      elInputUsername.onkeyup = function () {

        if(isMoreThan4Length(elInputUsername.value)) {
          elSuccessMessage.classList.remove('hide')
          elFailureMessage.classList.add('hide')
        }
        else {
          elSuccessMessage.classList.add('hide')
          elFailureMessage.classList.remove('hide')
        }
        console.log(elInputUsername.value);
      }


      function isMoreThan4Length(value) {
        return value.length>=4;
      }

      elInputPasswordRetype.onkeyup = isMatch;

      elInputPasswordRetype.onkeyup = function () {
        if(isMatch(elInputPassword.value, elInputPasswordRetype.value)) {
          elPasswordSuccessMessage.classList.add('hide')
        }
        else {
          elPasswordSuccessMessage.classList.remove('hide')
        }
      }

      elInputPassword.onkeyup = function () {
        if(isMatch(elInputPassword.value, elInputPasswordRetype.value)) {
          elPasswordSuccessMessage.classList.add('hide')
        }
        else {
          elPasswordSuccessMessage.classList.remove('hide')
        } 
        console.log(elInputPasswordRetype.value);
      }

      function isMatch (password1, password2) {
        if(password1===password2) return true;
        else return false;
      }
    </script>

 
